<resources>
    <style name="NumberComponent">
        <item name="android:layout_width">150px</item>
        <item name="android:layout_height">150px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">-17px</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">130px</item>
    </style>

    <style name="StageComponent">
        <item name="android:layout_width">300px</item>
        <item name="android:layout_height">65px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">60px</item>
        <item name="android:textStyle">bold</item>        
    </style>

    <style name="SeparatorIcon">
        <item name="android:layout_width">55px</item>
        <item name="android:layout_height">55px</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PomodoroIcon">
        <item name="android:layout_width">100px</item>
        <item name="android:layout_height">100px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">32px</item>
    </style>

    <style name="MenuTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
